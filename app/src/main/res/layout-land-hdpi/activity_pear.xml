<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PearActivity"
    android:background="#FFC0CB">

    <ImageView
        android:id="@+id/pear_header"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="80dp"/>

    <TextView
        android:id="@+id/pear_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="#912BD5"
        android:layout_below="@+id/pear_header"/>

    <ImageView
        android:id="@+id/pear"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:src="@drawable/background_pear"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/pear_sentence"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_below="@+id/pear"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"/>

</RelativeLayout>